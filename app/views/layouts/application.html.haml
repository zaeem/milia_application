!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title= @org_name
    = stylesheet_link_tag 'application'
    = javascript_include_tag 'application'
    = csrf_meta_tag
  %body
    #container
      #header
        %h1
          = link_to @org_name, "/"
        #user-navigation
          %ul.wat-cf
            %li
              %a{:href => "#"}= t("web-app-theme.profile", :default => "Profile")
            %li
              %a{:href => "#"}= t("web-app-theme.settings", :default => "Settings")
            %li
              - if user_signed_in?
                = link_to( t("web-app-theme.invite", :default => "Invite member"), new_member_path )
              - else
                = link_to( t("web-app-theme.signup", :default => "Sign up"), new_user_registration_path )
            %li
              - if user_signed_in?
                = link_to( t("web-app-theme.logout", :default => "Sign out"), destroy_user_session_path, :method => :delete )
              - else
                = link_to( t("web-app-theme.login", :default => "Sign in"), new_user_session_path )
        #main-navigation
          %ul.wat-cf
      #wrapper.wat-cf
        .flash
          - flash.each do |type, message|
            %div{:class => "message #{type}"}
              %p= message
          - flash.clear
        #main
          = yield
          #footer
            .block
              %p
                Copyright Â© #{Time.now.year}
                Milia App
        #sidebar
          = yield :sidebar
